pipeline {
    agent any

    environment {
        GITHUB_TOKEN = credentials('Github_Token')
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/AbraarMohiuddin/BookWeb.git', credentialsId: 'Github_Token'
            }
        }

        stage('Restore') {
            steps {
                bat 'dotnet restore'
            }
        }

        stage('Build') {
            steps {
                bat 'dotnet build --configuration Debug'
            }
        }

        stage('Publish') {
            steps {
                bat 'dotnet publish --configuration Release --output publish_output'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image with the name "bookstore-test"
                    bat 'docker build -t bookstore-test -f BookStore/Dockerfile .'
                }
            }
        }

stage('Run Tests in Docker') {
    steps {
        script {
            // Override the entry point to run tests instead of starting the application
            bat '''
            docker run --rm --name bookstore-test-container \
            bookstore-test dotnet test /src/BookStore/BookStore.sln
            '''
        }
    }
}

        stage('Cleanup Docker Containers') {
            steps {
                script {
                    // Stop and remove the test container after running tests
                    bat '''
                    docker stop bookstore-test-container || true
                    docker rm bookstore-test-container || true
                    '''
                }
            }
        }
    }

    post {
        always {
            // Clean up workspace and any leftover Docker containers/images
            cleanWs()
            script {
                bat '''
                docker rmi bookstore-test || true
                '''
            }
        }
    }
}
