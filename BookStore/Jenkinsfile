pipeline {
    agent any

    environment {
        GITHUB_TOKEN = credentials('Github_Token')
        DOCKER_REGISTRY_CREDENTIALS = credentials('DockerHub_Credentials')
        AZURE_PUBLISH_PROFILE = credentials('Azure_Publish_Profile')
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/AbraarMohiuddin/BookWeb.git', credentialsId: 'Github_Token'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("bookstore:latest")
                }
            }
        }

        stage('Run Tests in Docker') {
            steps {
                script {
                    dockerImage.inside {
                        bat 'dotnet test'
                    }
                }
            }
        }

        stage('Package for Deployment') {
            steps {
                script {
                    // Assuming the build output is located in /app/publish (based on Dockerfile)
                    sh '''
                        mkdir -p build_output
                        cp -r /app/publish/* build_output/
                        zip -r build_output/bookstore.zip build_output/*
                    '''
                }
            }
        }

        stage('Deploy to Test Server') {
            steps {
                script {
                    sh '''
                        docker stop bookstore-test || true
                        docker rm bookstore-test || true
                        docker run -d --name bookstore-test -p 8080:80 bookstore:latest
                    '''
                }
            }
        }

        stage('Deploy to Azure Production') {
            when {
                branch 'main'
            }
            steps {
                withCredentials([file(credentialsId: 'Azure_Publish_Profile', variable: 'PUBLISH_PROFILE')]) {
                    sh '''
                        az webapp deployment source config-zip --resource-group defaultresourcegroup-cau \
                        --name BookStore20241010200200 --src build_output/bookstore.zip \
                        --slot production --publish-profile $PUBLISH_PROFILE
                    '''
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
