pipeline {
    agent any

    environment {
        GITHUB_TOKEN = credentials('Github_Token')
        AZURE_PUBLISH_PROFILE = credentials('Azure_Publish_Profile')
        AZURE_APP_NAME = 'BookStore20241010200200'
        AZURE_RESOURCE_GROUP = 'defaultresourcegroup-cau'
        PUBLISH_OUTPUT_PATH = 'publish_output'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git url: 'https://github.com/AbraarMohiuddin/BookWeb.git', credentialsId: 'Github_Token'
            }
        }

        stage('Restore') {
            steps {
                bat 'dotnet restore'
            }
        }

        stage('Build') {
            steps {
                bat 'dotnet build --configuration Debug'
            }
        }

        stage('Publish') {
            steps {
                bat "dotnet publish --configuration Release --output ${PUBLISH_OUTPUT_PATH}"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat 'docker build -t bookstore-test -f BookStore/Dockerfile .'
                }
            }
        }

        stage('Cleanup Docker Containers') {
            steps {
                script {
                    bat '''
                    docker rmi bookstore-test || exit /b 0
                    '''
                }
            }
        }

        stage('Deploy to Azure') {
            when {
                expression {
                    currentBuild.result == null || currentBuild.result == 'SUCCESS'
                }
            }
            steps {
                script {
                    withCredentials([file(credentialsId: 'Azure_Publish_Profile', variable: 'PUBLISH_PROFILE')]) {
                        bat """
                        az webapp deployment source config-zip `
                        --resource-group ${AZURE_RESOURCE_GROUP} `
                        --name ${AZURE_APP_NAME} `
                        --src-path ${PUBLISH_OUTPUT_PATH}.zip `
                        --publish-profile %PUBLISH_PROFILE%
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
